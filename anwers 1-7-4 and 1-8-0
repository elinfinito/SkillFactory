if __name__ == "__main__":

    text = 'Название языка питон произошло вовсе не от вида пресмыкающихся. назвал язык в честь популярного британского комедийного телешоу 1970-х Летающий цирк Монти Пайтона'
    words_to_find = ['питон', 'Монти', 'проверка', 'честь', 'шоу', 'драма']
    name_to_find = 'Монти'
    list_ = [x for x in words_to_find if x in text]

    print(list_)

    print("")

    queries = "смотреть сериалы онлайн,новости спорта,афиша кино,курс доллара,сериалы этим летом,курс по питону,сериалы про спорт"
    words = ['сериалы', 'курс']
    result=str('')

    # Пробегаемся по элементам листа, который получается делением исходной строки по ',' и ищем там слова из массива words
    for j in queries.split(','):
        if words[0] in j or words[1] in j:
            # Если таковые имеются прибавляем их к ответу, т.е. к переменной result
            result += '{},'.format(j)
    # Убираем последнюю ненужную запятую в конце строчки, делая срез до последнего элемента
    result = result[:-1]
    # Выводим ответ
    
    print(result)
